<div class="col-md-12">
  <h2><%= @registered_application.name %></h4>
  <small><%= @registered_application.url%></small>
</div>
<div class="col-md-12">
  <%= link_to "Delete", registered_application_path(@registered_application), method: :delete, class: 'btn btn-danger pull-right', data: {confirm: 'Are you sure you want to delete this site?'} %>
  <%= link_to "Edit", edit_registered_application_path(@registered_application), class: 'btn btn-success pull-right' %>
</div>

<h3>Tracked Events:</h3>

<div class="col-md-11 ">
  <% @events.each do |event| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= pie_chart @registered_application.events.group(:name).count %>
          <%= line_chart @registered_application.events.group_by_day(:created_at).count %>
        </h4>
      </div>
    </div>
  <% end %>
</div>

<div class="col-md-12">
  <br/>
  <h4>Total Number of Events: <%= @events.count %></h5>
</div>
